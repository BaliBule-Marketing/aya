<!-- /sections/section-text-background.liquid -->

{%- liquid
  assign heading = section.settings.heading
  assign text = section.settings.text
  assign background_image = section.settings.background_image
-%}

<section
  id="TextWithBackground--{{ section.id }}"
  class="text-with-background section-padding"
  data-section-id="{{ section.id }}"
  data-section-type="text-with-background"
  {%- if background_image != blank -%}
    style="background-image: url('{{ background_image | image_url: width: 1920 }}'); background-size: 307px; background-position: center; background-repeat: no-repeat;"
  {%- endif -%}
>
  <div class="text-with-background__content">
    {%- if heading != blank -%}
      <h2 class="text-with-background__heading">
        {{ heading }}
      </h2>
    {%- endif -%}
    
    {%- if text != blank -%}
      <div class="text-with-background__text">
        {{ text }}
      </div>
    {%- endif -%}
  </div>
</section>

<style>
  .text-with-background {
    position: relative;
    min-height: 500px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    padding: 60px 20px;
  }

  .text-with-background__content {
    text-align: center;
    max-width: 426px;
    border-radius: 8px;
  }

  .text-with-background__heading {
    font-size: 36px;
    margin-bottom: 16px;
    font-weight: bold;
  }

  .text-with-background__text {
    font-size: 18px;
    line-height: 1.6;
  }

  @media (max-width: 768px) {
    .text-with-background {
      min-height: 400px;
      padding: 40px 15px;
    }

    .text-with-background__content {
      padding: 30px 20px;
    }

    .text-with-background__heading {
      font-size: 32px;
    }

    .text-with-background__text {
      font-size: 16px;
    }
  }
</style>

{% schema %}
{
  "name": "Text with background",
  "class": "index-section",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Your heading here"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Your text content goes here</p>"
    },
    {
      "type": "header",
      "content": "Background"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image",
      "info": "Recommended size: 1920 x 1080px"
    }
  ],
  "presets": [
    {
      "name": "Text with background",
      "category": "Text"
    }
  ],
  "disabled_on": {
    "groups": ["header", "aside", "footer"]
  }
}
{% endschema %}

